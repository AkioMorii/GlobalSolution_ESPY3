@model TrilhaAprendizagemModel

@{
    ViewData["Title"] = "Trilha";
}

<h2 class="mb-4">Consultar Trilha</h2>

<div class="card shadow-sm">
    <div class="card-body">

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Descricao" class="form-label">Nome</label>
                <input asp-for="Descricao" class="form-control" readonly />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Descricao" class="form-label">Descrição</label>
                <textarea asp-for="Descricao" class="form-control" cols="10" rows="5" disabled></textarea>
            </div>
        </div>



            <div class="form-group col-md-4">
                <label asp-for="CargaHoraria" class="form-label">Carga Horária</label>
                <input asp-for="CargaHoraria" class="form-control" readonly />
            </div>

        </div>

        <div class="d-flex justify-content-end mt-4">
            <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
        </div>

    </div>
</div>
