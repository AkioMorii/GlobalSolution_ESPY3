@model UsuarioModel

@{
    ViewData["Title"] = "Consultar Usuário";
}

<h2 class="mb-4">Consultar Usuário</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Nome" class="form-label">Nome</label>
                <input asp-for="Nome" class="form-control" readonly />
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" readonly />
            </div>
        </div>


        <div class="form-row">

            <div class="form-group col-md-4">
                <label asp-for="Telefone" class="form-label">Telefone</label>
                <input asp-for="Telefone" class="form-control" readonly />
            </div>

            <div class="form-group col-md-4">
                <label asp-for="Cpf" class="form-label">Cpf</label>
                <input asp-for="Cpf" class="form-control" readonly />
            </div>

            <div class="form-group col-md-4">
                <label asp-for="TipoUsuarioDescricao" class="form-label">Perfil</label>
                <input asp-for="TipoUsuarioDescricao" class="form-control" readonly />
            </div>

        </div>
        <div class="form-row">

            <div class="form-group col-md-6">
                <label asp-for="Login" class="form-label">Login</label>
                <input asp-for="Login" class="form-control" readonly />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="AtivoDescricao" class="form-label">Status</label>
                <input asp-for="AtivoDescricao" class="form-control" readonly />
            </div>
        </div>
        <div class="d-flex justify-content-end mt-4">
            <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
        </div>

    </div>
</div>
